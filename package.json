{
  "name": "laravel-vite-mix",
  "version": "0.0.3",
  "description": "Use Vite as Laravel Mix",
  "keywords": [],
  "author": {
    "name": "Hugo Rodrigues",
    "url": "https://github.com/hugoboss17"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugoboss17/laravel-vite-mix.git"
  },
  "bugs": {
    "url": "https://github.com/hugoboss17/laravel-vite-mix/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "bin": {
    "mix": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "npm run build && node --test",
    "verify:pack": "node scripts/verify-pack.mjs",
    "check:lockfile": "node scripts/check-lockfile-change.mjs",
    "prepack": "npm run build && npm run verify:pack",
    "prepublishOnly": "node scripts/enforce-ci-publish.mjs",
    "lint": "node -e \"console.log('add eslint if you want')\""
  },
  "dependencies": {
    "@rollup/plugin-inject": "5.0.5",
    "fast-glob": "3.3.3",
    "vite-plugin-static-copy": "3.2.0"
  },
  "peerDependencies": {
    "vite": "^7.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "sass": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
}
